<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Contactos</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script>
        function filterTable() {
            const filter = document.getElementById('searchInput').value.toUpperCase();
            const table = document.getElementById('contactTable');
            const trs = table.getElementsByTagName('tr');
            for (let i = 1; i < trs.length; i++) {
                let display = 'none';
                const tds = trs[i].getElementsByTagName('td');
                for (let j = 0; j < tds.length; j++) {
                    if (tds[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
                        display = '';
                        break;
                    }
                }
                trs[i].style.display = display;
            }
        }
    </script>
</head>
<body>
    <header>
        <div class="container">
            <h1>Contactos</h1>
        </div>
    </header>
    <main>
        <div class="container">
            <input type="text" id="searchInput" onkeyup="filterTable()" placeholder="Buscar por nombre o email" class="search-box">
            <table id="contactTable" class="contact-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Comentario</th>
                        <th>IP</th>
                        <th>Pa√≠s</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <% contactos.forEach(contacto => { %>
                    <tr>
                        <td><%= contacto.nombre %></td>
                        <td><%= contacto.email %></td>
                        <td><%= contacto.comentario %></td>
                        <td><%= contacto.ip %></td>
                        <td><%= contacto.pais %></td>
                        <td><%= contacto.fecha_hora %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </main>
    <footer>
        <div class="container">
            <p>&copy; Taller Los Santos 2024</p>
        </div>
    </footer>
</body>
</html>
